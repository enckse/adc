pkgname=depbo-tools
pkgver=0.6.80
pkgrel=1
arch=("x86_64")
pkgdesc="mikero depbo tools"
depends=("lzo" "libvorbis" "gcc-libs")
url="https://arma;services.maverick-applications.com/Products/MikerosDosTools/FileBrowserFree"
license=('CUSTOM')
source=("$pkgname-$pkgver.tgz::https://armaservices.maverick-applications.com/Products/MikerosDosTools/DownloadFree?download=$pkgname-$pkgver-linux-64bit.tgz")
sha256sums=('3e399f9a4ae4fba21b233df0d5850e439735d6eb243961c347ab7510945402d0')

package() {
  cd "${srcdir}/$pkgname-$pkgver"
  mkdir -p "$pkgdir/usr/bin/"
  mkdir -p "$pkgdir/usr/lib/"
  cp bin/* "$pkgdir/usr/bin/"
  cp lib/* "$pkgdir/usr/lib/"
}
